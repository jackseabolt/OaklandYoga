<!DOCTYPE html>
<html>
  <head>
    <title>OaklandYoga</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Mrs+Sheppards" rel="stylesheet">
    <meta name="viewport" content="width=device-width, intial-scale=1">
  </head>

  <body>
  	<nav class="navbar navbar-default">
	  <div class="container">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	    </div>
	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li class="nav_item"><%= link_to "Home", root_path %></li>
	        <li class="nav_item"><%= link_to "Classes", classes_page_path %></li>
	        <li class="nav_item"><%= link_to "Directions", directions_page_path %></li>
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>
	<div class="container-fluid content">
    	<%= yield %>
    	<div class="row contact_section">
			<div class="col-sm-8 col-sm-push-2 col-xs-10 col-xs-push-1">
				<h3>Contact Us</h3>
				<h5>If you have questions of would like to get in contact with us, please fill out this form</h5>
				<br />
				<div class="form-group">
					<input class="form-control" placeholder="Name">
				</div>
				<div class="form-group">
					<input class="form-control" placeholder="Email">
				</div>
				<div class="form-group">
					<textarea class="form-control" rows="5" placeholder="Your message"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-md btn-primary">Send</button>
				</div>
			</div>
		</div>
	</div>
  </body>
</html>
